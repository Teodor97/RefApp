@model IEnumerable<Product>
@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.Id</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-warning btn-sm" asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <input type="hidden" name="productId" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add Product</a>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
</div>